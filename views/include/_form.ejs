<!--form handeling-->
<form method="POST" id="add_employee">
    <div class="new_employee">
        <div class="form_group">
            <label for="first_name" class="text-light">First Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="first_name" value="" placeholder="John">
        </div>
        <div class="form_group">
            <label for="last_name" class="text-light">Last Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="last_name" value="" placeholder="Doe">
        </div><div class="form_group">
            <label for="email" class="text-light">Employee Email Id</label>
            <input type="text" name="email" value="" placeholder="john.doe@hotmail.com">
    </div>
    <div class="form-group">
        <button type="submit" class="btn text-dark update">Save</button>
    </div>
</form>